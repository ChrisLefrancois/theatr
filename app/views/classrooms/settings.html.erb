<div class="container">
  <h1 class="text-center p-5"><%= @classroom.access_code %></h1>


    <% @activities.each do |e| %>
      <div class="setting-box">
        <h2><%= e.title %></h2>
        <% if @classroom.activities.include?(e.title) %>
          <form action="/activities/<%= e.id %>/remove_activity">
            <input type="submit" value="Remove Activity" class="btn btn-danger">
          </form>
        <% else %>
          <form action="/activities/<%= e.id %>/add_activity">
            <input type="submit" value="Add Activity" class="btn btn-primary">
          </form>
        <% end %>
      </div>
    <% end %>

    <div class="d-flex justify-content-evenly flex-wrap">
      <%= link_to "Back to Classroom", classroom_path(current_user.classroom), class: "btn btn-primary" %>
      <%= link_to "Back to Activities", activities_path, class: "btn btn-primary", target: :_blank %>
    </div>

</div>
